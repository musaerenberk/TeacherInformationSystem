<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - Login Form</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <center>
        <!-- partial:index.partial.html -->
        <div class="container" onclick="onclick">
            <div class="top"></div>
            <div class="bottom"></div>
            <div class="center">
                <h2>Please Sign In</h2>
                <form action="#" method="post">
                    <p>Email</p>
                    <input type="text" class="name" name="mail" value="@ViewData["mail"]" />
                    <p>Password</p>
                    <input type="password" class="password" name="password" value="@ViewData["password"]" />
                    <input style="width:70%" type="submit" value="Login">
                    <br />
                    @ViewBag.message
                </form>
            </div>
        </div>
    </center>-
    <!-- partial -->
    <script src='https://codepen.io/banik/pen/ReNNrO/3f837b2f0085b5125112fc455941ea94.js'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
</body>
</html>
